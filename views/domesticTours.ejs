<% if(isAdmin){ %>
  <%- include('partials/adminHeader'); %>
<% } else if (isAuthenticated) { %>
  <%- include('partials/memberHeader'); %>
<% } else { %>
  <%- include('partials/header'); %>
<% } %>

<div id="banner" class="carousel slide" data-bs-ride="carousel" pause="hover" interval="1000">

  <!-- Indicators/dots -->
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#banner" data-bs-slide-to="0" class="active indicator"></button>
    <button type="button" data-bs-target="#banner" data-bs-slide-to="1" class="indicator"></button>
    <button type="button" data-bs-target="#banner" data-bs-slide-to="2" class="indicator"></button>
  </div>

  <!-- The slideshow/carousel -->
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="../../images/banner-nhatban.jpg" alt="Nhật Bản" class="d-block w-100">
    </div>
    <div class="carousel-item">
      <img src="../../images/banner-trongnuoc.jpg" alt="Trong nước" class="d-block w-100">
    </div>
    <div class="carousel-item">
      <img src="../../images/banner-sing-ma.jpg" alt="Sing-Mã" class="d-block w-100">
    </div>
  </div>

  <!-- Left and right controls/icons -->
  <button class="carousel-control-prev prev-button" type="button" data-bs-target="#banner" data-bs-slide="prev">
    <span class="carousel-control-prev-icon "></span>
  </button>
  <button class="carousel-control-next next-button" type="button" data-bs-target="#banner" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>
  </button>
</div>

  <!-- Domestic tours -->
    <div class="dtour" id="domestic-tours">
      <h3>Tour trong nước</h3>
    </div>


    <div class="tour-content">
      <div class="container-fluid text-center" >
        <div class="row" >

          <% domesticTours.forEach(function(dTour){ %>
            <div class="col-lg-3 col-md-6 tour-box">
              <div>
                <a href="/tours/<%= dTour.type %>/<%= dTour.destination %>/<%= dTour.id %>">
                  <img src="../<%= dTour.img_path %>" class="tour-img" hr>
                </a>
              </div>
              <div class="tour-detail">
                <h5><%= dTour.tour_name %></h5>              
                <table >
                  <tr>
                    <td class="tour-item-left"> <i class="fa-regular fa-clock"></i> Thời gian</td>
                    <td class="tour-item-right"><%= dTour.days %> </td>
                  </tr>
                  <tr>
                    <td class="tour-item-left"> <i class="fa-regular fa-calendar"></i> Ngày khởi hành</td>
                    <td class="tour-item-right"><%= dTour.date_string %></td>
                  </tr>
                  <tr>
                    <td class="tour-item-left"> <i class="fa fa-qrcode"></i> Số chỗ còn lại</td>
                    <td class="tour-item-right"><%= dTour.available_slots %></td>
                  </tr>
                  <tr>
                    <td class="tour-item-left"><i class="fa-solid fa-tag"></i> Giá tiền</td>
                    <td class="tour-item-right"><%= dTour.price %> VND</td>
                  </tr>
                </table>
              </div>
            </div>
          <% }); %>

        </div>
      </div>
    </div>
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <li class="page-item">
          <a class="page-link" href="/tours/tour-trong-nuoc/<%= prevPage %>">Previous</a>
        </li>
        <% for(let i = 1; i <= totalPages ; i ++ ){ %>
          <!-- NẾU ĐANG Ở TRANG CÙNG VỚI CHỈ SỐ I THÌ THÊM VÀO CLASS CỦA ELEMENT LI "DISABLED" -->
          <% if(i === page){ %>
            <li class="page-item disabled"><a class="page-link" href="/tours/tour-trong-nuoc/<%= i %>"><%= i %></a></li>
          <% } else { %>
            <li class="page-item"><a class="page-link" href="/tours/tour-trong-nuoc/<%= i %>"><%= i %></a></li>
          <% } %>
          
        <% }; %>
        <li class="page-item">
          <a class="page-link" href="/tours/tour-trong-nuoc/<%= nextPage %>">Next</a>
        </li>
      </ul>
    </nav>
  

    
<%- include('partials/footer') -%>